@{
    ViewData["Title"] = "blog posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<GBK.Models.Blog>
    <h1>see blog posts</h1>
    <p>list of posts</p>


<h4>@Html.DisplayNameFor(model => model.Title)</h4>
<ul>
    @foreach (var listBlog in Model)
    {
        <li>@Html.DisplayFor(modelItem => listBlog.Author) ~ @Html.DisplayFor(modelItem => listBlog.Text)</li>
    }
</ul>

<a href="http://localhost:62689/blog/add">Add a Blog Post</a>